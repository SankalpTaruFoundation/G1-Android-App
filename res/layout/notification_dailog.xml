<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="40.0px"
    android:layout_marginRight="40.0px"
    android:background="@drawable/rounded_popup_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ScrollView
        style="@style/goodList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/llAlertDialogMain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/llTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="10.0dip"
                    android:background="@drawable/ic_launcher"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5.0dip"
                    android:paddingLeft="8.0dip"
                    android:paddingRight="8.0dip"
                    android:paddingTop="5.0dip"
                    android:textColor="@color/black_color"
                    android:textSize="20.0dip" />
            </LinearLayout>

            <View
                android:id="@+id/viewLine"
                android:layout_width="fill_parent"
                android:layout_height="3.0dip"
                android:background="@color/StTheme"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5.0dip" >

                <TextView
                    android:id="@+id/tvMessage"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8.0dip"
                    android:paddingLeft="8.0dip"
                    android:paddingTop="8.0dip"
                    android:textColor="@color/black_color"
                    android:textSize="14.0dip" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5.0dip"
                android:gravity="center"
                android:padding="5.0dip"
                android:paddingLeft="5.0dip"
                android:paddingRight="5.0dip" >

                <Button
                    android:id="@+id/btnYes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/redbutton"
                    android:contentDescription="@string/app_name"
                    android:padding="5.0dip"
                    android:singleLine="true"
                    android:text="Yes"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/dialog_btn_textsize"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15.0dip"
                    android:background="@drawable/redbutton"
                    android:contentDescription="@string/app_name"
                    android:padding="5.0dip"
                    android:singleLine="true"
                    android:text="No"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/dialog_btn_textsize"
                    android:textStyle="bold"
                    android:visibility="visible" />
            </LinearLayout>

            <ImageView
                android:id="@+id/orImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:background="@drawable/or"
                android:contentDescription="@string/app_name"
                android:padding="5.0dip"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnOptional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:background="@drawable/greenbutton"
                android:contentDescription="@string/app_name"
                android:padding="5.0dip"
                android:singleLine="true"
                android:textColor="@color/white_color"
                android:textSize="@dimen/dialog_btn_textsize"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvRegisterWithAnother"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5.0dip"
                android:layout_marginRight="5.0dip"
                android:contentDescription="@string/app_name"
                android:gravity="center_horizontal"
                android:padding="5.0dip"
                android:singleLine="true"
                android:text="@string/version"
                android:textColor="@color/StTheme"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>