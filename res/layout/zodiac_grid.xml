<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/zodiacImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/zodiacImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dip" >

        <ImageView
            android:id="@+id/zodiac_leaf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/zodiac" />

        <TextView
            android:id="@+id/zodiac_tree_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/zodiac_leaf"
            android:layout_marginLeft="2dip"
            android:layout_toRightOf="@id/zodiac_leaf"
            android:textColor="@color/StTheme" />
    </RelativeLayout>

</RelativeLayout>