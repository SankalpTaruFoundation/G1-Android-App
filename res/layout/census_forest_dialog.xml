<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/goodList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dip"
        android:background="@drawable/bg" >

        <LinearLayout
            android:id="@+id/censusTreeLyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/censusTreeImg"
                android:layout_width="100dip"
                android:layout_height="100dip"
                android:layout_margin="5dip" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="Tag the tree image with details. Kindly fill the form below and submit."
                android:textColor="@color/black_light" />
        </LinearLayout>

        <TextView
            android:id="@+id/treeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/censusTreeLyt"
            android:layout_margin="5dip"
            android:text="Tree Name"
            android:textColor="@color/StTheme"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/treeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/treeName"
            android:layout_margin="5dip"
            android:inputType="textCapCharacters"
            android:hint="Enter Tree Name" >
        </EditText>

        <TextView
            android:id="@+id/treeHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/treeEditText"
            android:layout_margin="5dip"
            android:text="Tree Height"
            android:inputType="textCapCharacters"
            android:textColor="@color/StTheme"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/treeHeightEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/treeHeight"
            android:layout_margin="5dip"
            android:hint="Enter Tree Height"
            android:inputType="numberDecimal" >
        </EditText>

        <TextView
            android:id="@+id/treeGirth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/treeHeightEditText"
            android:layout_margin="5dip"
            android:text="Tree Girth"
            android:textColor="@color/StTheme"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/treeGirthEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/treeGirth"
            android:layout_margin="5dip"
            android:hint="Enter Tree Girth"
            android:inputType="numberDecimal" >
        </EditText>

        <TextView
            android:id="@+id/treeCanopy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/treeGirthEditText"
            android:layout_margin="5dip"
            android:text="Canopy Spread"
            android:textColor="@color/StTheme"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/treeCanopyEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/treeCanopy"
            android:layout_margin="5dip"
            android:inputType="numberDecimal"
            android:hint="Enter Tree Canopy Spread" >
        </EditText>

        <TextView
            android:id="@+id/remarks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/treeCanopyEditText"
            android:layout_margin="5dip"
            android:text="Remarks"
            android:textColor="@color/StTheme"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/remarksEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/remarks"
            android:layout_margin="5dip"
            android:inputType="textAutoComplete"
            android:hint="Enter Remarks(Optional)"
            android:lines="2" >
        </EditText>

        <Button
            android:id="@+id/proceedBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/remarksEditText"
            android:layout_margin="5dip"
            android:background="@drawable/redbutton"
            android:text="Submit"
            android:textColor="@color/white_color"
            android:textStyle="bold" />
    </RelativeLayout>

</ScrollView>